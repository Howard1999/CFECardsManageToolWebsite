doctype html

html
  head
    block title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    block meta
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css',rel='stylesheet',integrity='sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl',crossorigin='anonymous')
    link(rel="stylesheet", href="/stylesheets/layout.css")
    block css
    block others

  body
    // navigation bar
    header.navbar.navbar-expand-lg.navbar-light.rounded.sticky-top.m-2.p-0#navbar
      nav.container-xxl.p-2(aria-label="Main navigation")
        a.navbar-brand.p-0.me-2(href="/")
          img.d-block.my-1.nav-icon(src="http://fakeimg.pl/75x75/00CED1/FFF/?text=LOGO")
        button.navbar-toggler.collapsed(type="button",
          data-bs-toggle="collapse",
          data-bs-target="#navbarNavAltMarkup",
          aria-controls="navbarNavAltMarkup",
          aria-expanded="false",
          aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarNavAltMarkup
          ul.navbar-nav.flex-row.flex-wrap.bd-navbar-nav.pt-2.py-md-0
            li.nav-item.col-6.col-md-auto
              a.nav-link.p-2(href="/") 首頁
            li.nav-item.col-6.col-md-auto
              -if(signedIn){
                a.nav-link.p-2(href="/user/profile") 使用者
              -}else{
                  a.nav-link.disabled.p-2(href="/user/profile") 使用者
              -}
            li.nav-item.col-6.col-md-auto
              a.nav-link.p-2(href="/cardset/edit") 編輯卡組
            li.nav-item.col-6.col-md-auto
              a.nav-link.p-2(href="/#about") 聯絡
          hr.d-md-none.text-black-50
          ul.navbar-nav.flex-row.flex-wrap.ms-md-auto
            -if(!signedIn){
              li.nav-item.col-6.col-md-auto
                a.nav-link.p-2(href="/account/google-oauth2/sign-in") 登入
              li.nav-item.col-6.col-md-auto
                a.nav-link.p-2(href="/account/google-oauth2/sign-up") 註冊
            -}else{
              li.nav-item.col-6.col-md-auto.d-flex
                a.nav-link.p-2(href="/account/google-oauth2/sign-out") 登出
            -}
    // content
    block content

    // copy right footer
    div.p-1.fixed-bottom.pe-none
      p.fs-6.m-0.text-break &copy; copyright by Howard-Su

    // load js
    // jquery
    script(src='https://code.jquery.com/jquery-3.5.1.min.js',integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=',crossorigin='anonymous')
    // bootstrap
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js',integrity='sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0',crossorigin='anonymous')

    block js
