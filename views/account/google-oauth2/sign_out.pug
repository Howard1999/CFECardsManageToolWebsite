extends ../../layout

block css
    link(rel="stylesheet", href="/stylesheets/account/google-oauth2/google-oauth2.css")
    
block content
    div.container-xxl
        div.row.justify-content-center.text-center
            h2.text-break #{title}
            p.fs-5.text-break 即將登出
        div.row.justify-content-center.text-center
            div.col-12.col-lg-6
                img.img-fluid.p-2(src="http://fakeimg.pl/500x500/00CED1/FFF/?text=temp+IMG")
        div.row.justify-content-center.text-center.p-2
            div.col-12.col-md-9.col-lg-6
                div.row.justify-content-center.text-center
                    div.col-6.col-sm-4
                        a.btn.btn-outline-dark.w-100(role="button", onclick="signOut();")
                            p.fs-5.text-break.m-0 確認
                    div.col-6.col-sm-4
                        a.btn.btn-outline-dark.w-100(href='/', role="button")
                            p.fs-5.text-break.m-0 取消

block js
    script(src='/javascripts/account/google-oauth2/sign_out.js')